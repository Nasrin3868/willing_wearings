<%-include("../partials/userheader")-%>

<section class="product-tabs pt-25 pb-20 wow fadeIn animated">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="tab-content wow fadeIn animated" id="myTabContent">
                    <div class="tab-pane fade show active" id="tab-one" role="tabpanel" aria-labelledby="tab-one">
                        <div class="row product-grid-4 ">
                            <% let count = 0; %>
                            <% Coupon.forEach(function(coupon) { %>
                                <div class="col-lg-3 col-md-4 col-12 col-sm-6">
                                    <div class="product-cart-wrap mb-30">
                                        <div class="product-content-wrap">
                                            <h4 class="pt-25 pb-10" href="#" style="color: brown;"> <%= coupon.coupon_description %></h4>
                                            <span class="text-center class text-center"> You can get a discount of <%= coupon.discount_percentage %>% upto Rs. <%= coupon.max_discount %> fro a minimum order of Rs. <%= coupon.min_order %></span><br>
                                            <span class="text-center">The offer is valid till <script>
                                                                            var dateString = '<%= coupon.valid_to %>'; 
                                                                            var date = new Date(dateString);
                                                                            var formattedDate = date.toLocaleDateString(); 
                                                                            document.write(formattedDate);
                                                                        </script>
                                            </span><br>
                                            <h4 class="pb-20 pt-20" style="color: brown;"> <%= coupon.coupon_code %> </h4>
                                        </div>
                                    </div>
                                </div>
                                <% if (++count % 3 === 0) { %>
                            </div>
                            <div class="row product-grid-4">
                                <% } %>
                                <% }) %>
                            </div>
                        </div>
                        <div>
                            <a href="#" class="btn">Go back</a>
                        </div>
                    </div>
                    <!-- End tab one (Featured) -->
                </div>
                <!-- End tab-content -->
            </div>
        </div>
    </div>
</section>

<%-include("../partials/userfooter")-%>
