                    </div>
                    
                </div>
            </div>
        </div>
    </header>

    <script>
        document.getElementById('categorySearchForm').addEventListener('submit', function (e) {
            e.preventDefault();
            const searchInput = document.getElementById('categorySearchInput').value.toLowerCase();
            const categoryOptions = document.querySelectorAll('.select-active option');
    
            for (const option of categoryOptions) {
                const categoryName = option.textContent.toLowerCase();
                if (categoryName === searchInput) {
                    location.href = option.value;
                    break;
                }
            }
        });
    </script>