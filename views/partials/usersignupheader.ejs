<body>
    <!-- Quick view -->


    <header class="header-area header-style-1 header-height-2">
        <div class="header-middle header-middle-ptb-1 d-none d-lg-block">
            <div class="container">
                <div class="header-wrap">
                    <div class="logo logo-width-1">
                        <a href="/home"><img src="assets/imgs/theme/logo.svg" alt="logo"></a>
                    </div>
                    <div class="header-right">
                        <div class="search-style-2">
                            <form action="#" id="categorySearchForm">
                                <select class="select-active" onchange="location = this.value;">
                                    <option value="/">All Categories</option>
                                    <% categories.forEach(function(category) { %>
                                        <option value="/showbycategory/<%= category.name %>"><%= category.name %></option>
                                    <% }); %>
                                </select>
                                <input type="text" id="categorySearchInput" placeholder="Search for items...">
                            </form>
                            
                        </div>
                        <div class="header-action-right">
                            <div class="header-action-2">
                                <div class="header-action-icon-2">
